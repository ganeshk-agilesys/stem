<div class="span-29 prepend-top">
  <div class="span-29 last">
    <div style="height:70px;width:70px;float:left;">
      <%= image_tag "overview_b.png", :style => "vertical-align: middle;" %>
    </div>
    <div style="float:left;width:780px;margin-left:10px;">
      <h3 class="title"><b><%= t(:career_description) %></b></h3>
      <br /><br />
      <span><%= @occupation["description"] %></span>
      <br /><br />
    </div>
    <hr class="divider" />
  </div>

  <div class="span-29 last">
    <div style="height:70px;width:70px;float:left;">
      <%= image_tag "overview_c.png", :style => "vertical-align: middle;" %>
    </div>
    <div style="float:left;width:780px;margin-left:10px;">
      <h3 class="title"><b><%= t(:salary) %></b></h3>
      <br /><br />
      <div class="column append-1"><%= t(:average) %> <span><b id="state-low"><%= (hash_has_value?(@occupation,"average_national_salary")) ? number_to_currency(@occupation["average_national_salary"]) : "No Data" %></b></span></div>
      <br /><br />
    </div>
    <%- if hash_has_value?(@occupation,"significant_points")-%>
      <hr class="divider" />
    <% end %>
  </div>

  <%- if hash_has_value?(@occupation,"significant_points") -%>
    <div class="span-29 last">
      <div style="height:70px;width:70px;float:left;">
        <%= image_tag "overview_e.png", :style => "vertical-align: middle;" %>
      </div>
      <div style="float:left;width:780px;margin-left:10px;">
        <h3 class="title"><b><%= t(:did_you_know) %></b></h3>
        <br /><br />
        <ul style="margin-left: 15px;">
          <%- @occupation["significant_points"].each do |point| -%>
            <li><span><%= point %></span></li>
          <%- end -%>
        </ul>
      </div>
    </div>
  <%- end -%>
</div>


